<h1>Departments</h1>

@if (@Model.Count == 0)
{
    <p>No departments have been added to this university</p>
}
else{
    <ol>
    @foreach (var department in @Model)
    {
        <li>department.GetName()</li>
    }
    </ol>
}
<h4>Add a department</h4>
<form action ='/department/new' method = 'post'>
    <label for='department-name'>Add a department</label>
    <input id='department-name' name='department-name' type="text">
     <button type='submit'>Add</button>
</form>
