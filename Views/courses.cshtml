@{
    Layout="Shared/_Layout.cshtml";
}



<h1>Courses</h1>

@if (@Model.Count == 0)
{
    <p>No courses have been added to this university</p>
}
else{
    <ol>
    @foreach (var course in @Model)
    {
        <li>@course.GetName()</li>
    }
    </ol>
}
<h4>Add a course</h4>
<form action ='/course/new' method='post'>
    <label for='course-name'>Course name</label>
    <input id='course-name' name='course-name' type="text">
    <label for='course-number'>Course number</label>
    <input id='course-number' name='course-number' type="text">
     <button type='submit'>Add</button>
</form>
