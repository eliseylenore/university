@{
    Layout="Shared/_Layout.cshtml";
}



<h1>Students</h1>

@if (@Model.Count == 0)
{
    <p>No students have been added to this university</p>
}
else{
    @foreach (var student in @Model)
    {
        <row>
            <h4 class="col s2">@student.GetName()</h4>
            <form action="/student/delete/Model.GetId()" class="col s2" method="post">
                <input type="hidden" name="_method"  value="DELETE">
                <button type="submit" class="material-icons">delete</button>
            </form>
        </row>
    }
}
<h4>Add a student</h4>
<form action ='/student/new' method='post'>
    <label for='student-name'>Student name</label>
    <input id='student-name' name='student-name' type="text">
     <button type='submit'>Add</button>
</form>
